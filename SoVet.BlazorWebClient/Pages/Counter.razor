@page "/counter"
@using SoVet.BlazorWebClient.Services
@using SoVet.BlazorWebClient.Models

@inject IAuthenticationService AuthenticationService;
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="@(async () => await IncrementCount())">Click me</button>

@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        var res = await AuthenticationService.Login(new UserLogin()
        { Email = "riazonbin@gmail.com", Password = "12345"});

        if (res.IsSuccess)
        {
            currentCount++;
        }
    }

}
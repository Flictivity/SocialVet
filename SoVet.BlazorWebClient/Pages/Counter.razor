@page "/counter"

@inject IAuthenticationService AuthenticationService;
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@(async () => await IncrementCount())">Click me</MudButton>

@code {
    private int currentCount;

    private async Task IncrementCount()
    {
        var res = await AuthenticationService.Login(new UserLogin()
        { Email = "riazonbin@gmail.com", Password = "12345"});

        if (res.IsSuccess)
        {
            currentCount++;
        }
    }

}
@using SoVet.BlazorWebClient.Models.Employee
@using SoVet.BlazorWebClient.Services

@inject IEmployeeService EmployeeService;
@inject ISnackbar Snackbar;

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_isValid" Model="_model">
            <MudGrid Spacing="3">
                <MudItem xs="12">
                    <MudTextField Required="true" Variant="Variant.Outlined" T="string" @bind-Value="_model.Name" Label="ФИО" FullWidth="true"/>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Required="true" Variant="Variant.Outlined" InputType="InputType.Email" T="string"
                                  @bind-Value="_model.Email" FullWidth="true" Label="Email"/>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect T="string" Required="true" Variant="Variant.Outlined" @bind-Value="_model.Role" Label="Роль" FullWidth="true">
                        <MudSelectItem T="string" Value="@("Ветеринар")">Ветеринар</MudSelectItem>
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Disabled="!_isValid" Class="ma-3" Color="Color.Primary" FullWidth="true" Variant="Variant.Filled" ButtonType="ButtonType.Submit" OnClick="@(async () => await Create())">Создать</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    private MudForm _form = null!;
    private EmployeeRegistration _model = new();
    private bool _isValid = true;

    private async Task Create()
    {
        var res = await EmployeeService.CreateEmployee(_model);
        if (!res.IsSuccess)
        {
            Snackbar.Add(res.Message, Severity.Error);
            return;
        }
        Snackbar.Add("Успешно", Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }
}